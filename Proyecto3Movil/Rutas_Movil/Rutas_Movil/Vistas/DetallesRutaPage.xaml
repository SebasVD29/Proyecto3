<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rutas_Movil.Vistas.DetallesRutaPage"
             Title="DetallesRutaPage">
    <VerticalStackLayout>
        <Grid RowDefinitions="Auto,Auto,*" RowSpacing="15" Margin="15">

            <ScrollView  Margin="20">
                
            

            <Label Text="Nombre de Ruta:"></Label>
            <Entry x:Name="nombreRuta" Margin="0,0,0,10"></Entry>

            <Label Text="Nombre de la Direccion:"></Label>
            <Entry x:Name="nombreDireccionRuta" Margin="0,0,0,10"></Entry>

            <Label Text="Pais Final:"></Label>
            <Entry x:Name="paisFinal" Margin="0,0,0,10"></Entry>

            <Label Text="Ciudad Final:"></Label>
            <Entry x:Name="ciudadFinal" Margin="0,0,0,10"></Entry>

            <Label Text="NumeroPlaca:"></Label>
            <Entry x:Name="numeroPlaca" Margin="0,0,0,10"></Entry>

            <Label Text="Identificador del Cliente:"></Label>
            <Entry x:Name="idCliente" Margin="0,0,0,10"></Entry>

            <Label Text="Nombre del Cliente:"></Label>
            <Entry x:Name="nombreCliente" Margin="0,0,0,10"></Entry>

            <Label Text="Telefono del Cliente:"></Label>
            <Entry x:Name="telefonoCliente" Margin="0,0,0,10"></Entry>

            <Label Text="Descripcion:"></Label>
            <Entry x:Name="descripcion" Margin="0,0,0,10"></Entry>

            <Label Text="Fecha de Inicio:"></Label>
            <Entry x:Name="fechaInicio" Margin="0,0,0,10"></Entry>

            <Label Text="Fecha Final:"></Label>
            <Entry x:Name="fechaFinal" Margin="0,0,0,10"></Entry>

            <Label Text="Estado de Entrega:"></Label>
            <Entry x:Name="estadoEntrega" Margin="0,0,0,10"></Entry>

            <Button x:Name="Actualizar" Text="Actualizar" Clicked="Actualizar_Clicked"></Button>

            <Label x:Name="Mensaje" IsVisible="False"></Label>
            
        </ScrollView>
    </Grid>
    </VerticalStackLayout>
</ContentPage>