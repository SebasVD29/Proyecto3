<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rutas_Movil.Vistas.ListaRutasPage"
             Title="Rutas">
    <VerticalStackLayout>
        <ActivityIndicator x:Name="carga" HeightRequest="30" Color="Blue" IsRunning="True" IsVisible="false">

        </ActivityIndicator>
        <Grid RowDefinitions="Auto,Auto,*" RowSpacing="15" Margin="15">
            <Button x:Name="CrearIncidencia" Grid.Row="0" Text="Crear Incidencia" Clicked="Crear_Clicked" ></Button>
            <Label Grid.Row="1" Text="Lista de Rutas" FontSize="Subtitle"></Label>

            <ScrollView Grid.Row="2">
                <ListView x:Name="lvRutas" SelectionMode="Single" ItemSelected="OnItemSelected"  SeparatorColor="Black" >
                    <ListView.ItemTemplate >
                        <DataTemplate >
                            <TextCell TextColor="White" 
                                      Text="{Binding IdentificadorRuta}"   
                                      Detail="{Binding EstadoEntrega}" 
                                      />
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </ScrollView>

        </Grid>
        <Button x:Name="LogOut" Text="Cerrar Sesion" Clicked="LogOut_Clicked" ></Button>
        
    </VerticalStackLayout>
    
    
</ContentPage>